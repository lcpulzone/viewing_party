<h1>Please register by inputing the following details</h1>

<%= form_with model: @user, class: "registration_form", local: true do |f| %>
  <%= f.label :email, 'Email' %>
  <%= f.text_field :email %><br/><br/>
  <%= f.label :password, 'Password' %>
  <%= f.text_field :password %><br/><br/>
  <%= f.label :password_confirmation, 'Confirm Password' %>
  <%= f.text_field :password_confirmation %><br/><br/>
  <%= f.submit 'Register' %>
<% end %>
